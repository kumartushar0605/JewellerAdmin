<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAddBannerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Banner Image" />

    <EditText
        android:id="@+id/inputBannerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Banner Name" />

    <EditText
        android:id="@+id/inputBannerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Banner Description" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBanners"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>
