<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".HomeActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Banner Section -->
        <EditText
            android:id="@+id/inputBannerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Banner Name"
            android:backgroundTint="#FF6200EE"
            android:textColorHint="#888888"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <EditText
            android:id="@+id/inputBannerDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Banner Description"
            android:backgroundTint="#FF6200EE"
            android:textColorHint="#888888"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/inputBannerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <Button
            android:id="@+id/btnAddBannerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Banner Image"
            android:backgroundTint="#FF6200EE"
            android:textColor="#FFF"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/inputBannerDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/bannerImagePreview"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/btnAddBannerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Testimonial Section -->
        <EditText
            android:id="@+id/inputCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Customer Name"
            android:backgroundTint="#FF6200EE"
            android:textColorHint="#888888"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/bannerImagePreview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <Button
            android:id="@+id/btnAddTestimonialImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Testimonial Image"
            android:backgroundTint="#FF6200EE"
            android:textColor="#FFF"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/inputCustomerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/testimonialImagePreview"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/btnAddTestimonialImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Dropdown and Submit Section -->

        <TextView
            android:id="@+id/caratLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Metal Name"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testimonialImagePreview" />

        <Spinner
            android:id="@+id/dropdownPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/caratLabel" />
        <TextView
            android:id="@+id/karatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Select Karat"
            android:textColor="#000"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dropdownPrice" />

        <Spinner
            android:id="@+id/dropdownKarat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/karatLabel" />
        <EditText
            android:id="@+id/inputPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Price"
            android:backgroundTint="#FF6200EE"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/dropdownKarat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <Button
            android:id="@+id/btnSubmitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FF6200EE"
            android:elevation="4dp"
            android:text="Submit"
            android:textColor="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
